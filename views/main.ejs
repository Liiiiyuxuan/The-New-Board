<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/46d8f8fb7b.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/output.css">
    <title>Whiteboard</title>
    <!-- <style>
        @import url('https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap');
    </style> -->
</head>
<body>
    <nav class="relative container mx-auto p-6">
        <div class="flex items-center justify-between">
            <div class="logo">
                <a href=""><img src="/assets/whiteboard4.png" alt=""></a>
            </div>

            <div class="nav-links flex space-x-6">
                <a href="/course" class="hover:text-jetBlue">Stream</a>
                <a href="" class="hover:text-jetBlue">Courses</a>
                <a href="" class="hover:text-jetBlue">Grades</a>
                <a href="/calendar" class="hover:text-jetBlue">Calendar</a>
            </div>



            <div class="notification">
                <div class="space-x-6">
                    <!-- <i class="text-darkGrayishBlue text-2xl fa-regular fa-moon"></i> -->
                    <i id="notification-button" class="hover:text-jetBlue hover:cursor-pointer text-2xl fa-regular fa-bell"></i>
                
                    <div class="menu hidden  absolute right-0 z-9 mt-2 w-56 origin-top-right divide-y divide-gray-100 rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
                        <div class="py-1" role="none">
                            <!-- Active: "bg-gray-100 text-gray-900", Not Active: "text-gray-700" -->
                            <a href="#" class="text-red-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-0">Edit</a>
                            <a href="#" class="text-red-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-1">Duplicate</a>
                        </div>
                        <div class="py-1" role="none">
                            <a href="#" class="text-red-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-2">Archive</a>
                            <a href="#" class="text-red-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-3">Move</a>
                        </div>
                        <div class="py-1" role="none">
                            <a href="#" class="text-red-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-4">Share</a>
                            <a href="#" class="text-red-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-5">Add to favorites</a>
                        </div>
                        <div class="py-1" role="none">
                            <a href="#" class="text-red-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-6">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
        


    </nav>

    <!-- courses -->
    <section>
        <div class="grid grid-cols-3 gap-12 px-16">
            <% for (let i = 0; i < user.courses.length; i++) { %>
                <div class="dark card white bg-white rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700">
                
                    <a href="#">
                        <img class="rounded-t-lg" src="<%= user.courses[i].bgImgUrl %>" alt="" />
                    </a>
                    <div class="p-5">
                        <a href="#">
                            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900"><%= user.courses[i].name %></h5>
                        </a>
                        <p class="dark mb-3 font-normal text-gray-700 dark:text-gray-400"><%= user.courses[i].description %></p>
                        <a href="#" class="dark inline-flex items-center px-3 py-2 text-sm font-medium text-center bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                            Go to class
                            <svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                        </a>
                    </div>
                </div>

            <% } %>

            
           

        </div>

        
    </section>    

    <script src="/scripts/notification.js"></script>
</body>
</html>